										<p>Price: ₹<%= selectedOrder[0].productDetails[0].offerPrice%></p>
										<p><h6>Quantity: <%= selectedOrder[0].products.quantity%></h6></p>
										<p><h5><%= selectedOrder[0].productDetails[0].discription%></h5></p>
										<p><h5><%= selectedOrder[0].paymentMethod%></h5></p>
										<p><h5><%= selectedOrder[0].date%></h5></p>
										 <% if(selectedOrder[0].usedCoupen){ %>
