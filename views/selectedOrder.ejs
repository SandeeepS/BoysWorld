														<h5><%= selectedOrder[0].currentAddressDetail[0].address.city%>,</h5>
														<h5><%= selectedOrder[0].currentAddressDetail[0].address.street%>,</h5>
														<h5><%= selectedOrder[0].currentAddressDetail[0].address.landMark%></h5>
														<h5><%= selectedOrder[0].currentAddressDetail[0].address.pin%>,</h5>
													<% }else{ %>
