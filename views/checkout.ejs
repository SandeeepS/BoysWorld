	<script>
        // Add a JavaScript function to handle the radio button click event
        document.addEventListener("DOMContentLoaded", function () {
            const radioButtons = document.querySelectorAll("input[type='radio']");
            const boxSubs = document.querySelectorAll(".box-sub");

            for (let i = 0; i < radioButtons.length; i++) {
                radioButtons[i].addEventListener("click", function () {
                    // Remove the 'highlighted' class from all box-subs
                    for (let j = 0; j < boxSubs.length; j++) {
                        boxSubs[j].classList.remove("highlighted");
                    }

                    // Add the 'highlighted' class to the selected box-sub
                    boxSubs[i].classList.add("highlighted");
                });
            }
        });
    </script>

	<script>
		// Get references to the modal and the button to open/close it
		var modal = document.getElementById("myModal");
		var openModalBtn = document.getElementById("openModalBtn");
		var closeModalBtn = document.getElementById("closeModalBtn");
	
		// Event listener to open the modal
		openModalBtn.onclick = function() {
			modal.style.display = "block";
		}
	
		// Event listener to close the modal
		closeModalBtn.onclick = function() {
			modal.style.display = "none";
		}
	
		// Close the modal if the user clicks outside of it
		window.onclick = function(event) {
			if (event.target == modal) {
				modal.style.display = "none";
			}
		}
	</script>

	<script>
		// Function to get product details from the cookie
		function getProductDetailsFromCookie() {
			const cookieValue = document.cookie
				.split('; ')
				.find(row => row.startsWith('productDetails='))
				?.split('=')[1];
	
			return cookieValue ? JSON.parse(decodeURIComponent(cookieValue)) : null;
		}
	
		// Example usage
		document.addEventListener('DOMContentLoaded', function () {
			// Call the function to get product details from the cookie
			const productDetails = getProductDetailsFromCookie();
	
			// Check if product details are available
			if (productDetails) {
				console.log("Product ID:", productDetails.id);
				console.log("Quantity:", productDetails.quantity);
	
				// Now you can use the product details as needed in your checkout page
				// For example, you can update the checkout form with these details
				document.getElementById('productIdInput').value = productDetails.id;
				document.getElementById('quantityInput').value = productDetails.quantity;
			}
		});
	</script>

