			const phonePattern = /^(?=.*[1-9])\d{10}$/;
			
			
			function isValidEmail(email) {
				// Regular expression for a simple email validation
				const emailRegex = /^[^\s@]+@gmail\.com$/;
				return emailRegex.test(email);
			}

			

			function checkWhiteSpace(s){
