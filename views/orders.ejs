	<script>
		var openModalLinks = document.querySelectorAll(".cancelOrder");
		var closeModal = document.getElementById("conformModalClose");
		var modals = document.querySelectorAll(".modal");
	
		// Attach event listeners to each "Cancel Order" link
		openModalLinks.forEach(function (link) {
			link.onclick = function () {
				var orderId = link.getAttribute("data-orderId");
				var modal = document.getElementById("conformModal-" + orderId);
				modal.style.display = "block";
			};
		});
	
		// Attach event listeners to close the modal
		closeModal.onclick = function () {
			modals.forEach(function (modal) {
				modal.style.display = "none";
			});
		};
	
		// Close the modal if the user clicks outside of it
		window.onclick = function (event) {
			modals.forEach(function (modal) {
				if (event.target == modal) {
					modal.style.display = "none";
				}
			});
		};
	</script>
