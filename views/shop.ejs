	<script>
		document.addEventListener("DOMContentLoaded",function(){
			const selectedCategory = document.querySelectorAll(".categorySelect");
			Array.from(selectedCategory).forEach((selectedCategory,i)=>{
				selectedCategory.addEventListener("click",function(event){
						event.preventDefault();
						const categoryId = this.getAttribute("data-categoryId");
						updateCategoryProduct(categoryId);
				})
			})
			function updateCategoryProduct(categoryId){
                $.ajax({
					type:'POST',
					url:'/categoryBasedProduct',
					data:{
						categoryId
					},
					success:function(response){
					    if (response && response.product && response.category) {
							const productContainer = document.getElementById('feature');
							const feature = document.getElementById('feature');
							productContainer.innerHTML = '';
							let productHTML = '';
							response.product.forEach((pro) => {
								productHTML += `
									<div class="col-sm-4">
										<div class="product-image-wrapper">
											<div class="single-products">
												<div class="productinfo text-center">
													<img src="/views/productImages/${pro.image[1]}" alt="" height="400px" width="100px" style="object-fit: cover;">
													<p>${pro.discription}</p>
													<a href="/selectedProduct/${pro._id}" class="btn btn-default add-to-cart">Buy Now</a>
													<a href="/addToCart/${pro._id}" class="btn btn-default add-to-cart buy-now-btn" data-product-id="${pro._id}"  data-image="/views/productImages/${pro.image[1]}">Add to Cart</a>
												</div>
											</div>
										</div>
									</div>`;
								productContainer.innerHTML = productHTML;
							});
						} else {
							console.error('Invalid response format');
						}
					},
					error:function(err){
						console.log("error getting product based on category");
					}
				})
			}
		})
	</script>
</body>
