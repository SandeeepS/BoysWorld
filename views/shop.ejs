	<script>
		// Get references to the modal and the button to open/close it
		var modal = document.getElementById("myModal");
		var openModalBtn = document.querySelectorAll(".buy-now-btn");
		var closeModalBtn = document.getElementById("closeModalBtn");
	
		// Event listener to open the modal
		document.querySelectorAll(".buy-now-btn").forEach(function (btn) {
			btn.onclick = function () {
				modal.style.display = "block";
				var productImage = btn.getAttribute("data-image");
				var modalImage = document.querySelector(".modal-pic img");
				modalImage.src = productImage;
			};
		});
	
		// Event listener to close the modal
		closeModalBtn.onclick = function() {
			modal.style.display = "none";
		}
	
		// Close the modal if the user clicks outside of it
		window.onclick = function(event) {
			if (event.target == modal) {
				modal.style.display = "none";
			}
		}
	</script>
