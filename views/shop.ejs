										<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
									</ul>
								</div>
							</div>
						</div>
						<%}%>
					</div><!--features_items-->
					
					<div class="pagination">
						<% if(currentPage > 1){ %>
						    <a href="?page=<%= currentPage - 1 %>" class="prev">Previous</a>
						<% } else { %>
							<a class="prev" disabled>Previous</a>
						<% } %>
