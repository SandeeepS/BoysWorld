      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-sm-12">
              <div class="home-tab">
                
                <div class="tab-content tab-content-basic">
                  <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview"> 
                    
                     
                    <div class="row">
                      <div class="col-lg-12 d-flex flex-column">
                        <div class="row flex-grow">
                          <div class="col-12 grid-margin stretch-card">
                            <div class="card card-rounded">
                              <div class="card-body">
                                  <div>
                                    <h1 class="card-title ">Sales Report</h1>
                                  </div>
                                  <div class="card-container">
                                    <div class="card">
                                        <h3> Date</h3>
                                        <label for="">Select Date</label>
                                        <input type="text" id="datepicker">
                                        <br>
                                        <button class="btn btn-primary btn-sm" style="color: #ddd;width:30%" id="SalesReportByDate">Get Report</button>
                                    </div>
                                    <div class="card">
                                            <h3>Select from a range</h3>
                                            <label for="">Select Starting Date</label>
                                            <input type="text" id="datepicker2">
                                            <br>
                                            <label for="">Select Ending Date</label>
                                            <input type="text" id="datepicker3">
                                            <br>
                                            <br>
                                            <button class="btn btn-primary btn-sm" style="color: #ddd;width:30%" id="SalesReportByRange">Get Report</button>
                                    </div>
                                   </div>
                                   <div class="card">
                                         <h3>Yearly</h3>
                                         <label for="">Select Year</label>
                                         <select name="year3" id="year3">
                                         </select>
                                         <br>
                                         <button class="btn btn-primary btn-sm" style="color: #ddd;width:30%" id="SalesReportByYearly">Get Report</button>
                                   </div>
                                   
                                   <br>
                                   <br>
                                  <div class="chartjs-bar-wrapper mt-3">
                                    <table class="sales-report table table-condensed">
                                    <% if(orders){ %>
                                        <button class="btn  btn-success btn-sm" id="donBtn">DOWNLOAD</button>
                                  
                                        <thead>
                                          <tr>
                                            <th>Item ID</th>
                                            <th>Username</th>
                                            <th>Product Name</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Tax</th>
                                            <!-- Add other columns as needed -->
                                          </tr>
                                        </thead>
                                        <tbody>
                                            <% for(let i = 0; i < orders.length; i++) { %>
                                                <tr>
                                                  <td><%= orders[i].orderId %></td>
                                                  <td><%= orders[i].userDetails[0].name %></td>
                                                  <td><%= orders[i].productDetails[0].productName %></td>
                                                  <td><%= orders[i].productDetails[0].price %></td>
                                                  <td><%= orders[i].products.quantity %></td>
                                                  <!-- Render other order details here -->
                                                </tr>
                                              <% } %>
                                         </tbody>
                                       </table>
                                    <% }  else {%>
                                        <h4>No sales selected</h4>
                                    <% } %>
