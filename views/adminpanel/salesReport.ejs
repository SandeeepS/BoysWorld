  <script> 
       document.addEventListener("DOMContentLoaded",function(){
         //date selection 
         $( "#datepicker" ).datepicker();
         $( "#datepicker2" ).datepicker();
         $( "#datepicker3" ).datepicker();
      

         //loading the years 
         var dates = document.getElementById("year3");
         for( var i = 2015; i <= 2024; i++){
            var opt = document.createElement("option");
            opt.value = i;
            opt.innerHTML = i ;
            dates.appendChild(opt);
         }
   
       })
  </script>
  <script>
       const reportByDate =  document.getElementById("SalesReportByDate");
       const reportByRange = document.getElementById("SalesReportByRange");
       const reportByYearly = document.getElementById("SalesReportByYearly");

            reportByDate.addEventListener("click",function(event){
                event.preventDefault();
                const date = document.getElementById("datepicker").value;
                console.log("date:",date);
                const newUrl = `/admin/salesReport?date=${date}`;
              window.location.href = newUrl
              })

              reportByRange.addEventListener("click",function(event){
                event.preventDefault();
                const firstDate = document.getElementById("datepicker2").value;
                const secondDate = document.getElementById("datepicker3").value;
                console.log("date:",firstDate,secondDate);
                const newUrl = `/admin/salesReport?firstDate=${firstDate}&secondDate=${secondDate}`;
              window.location.href = newUrl
              })

            reportByDate.addEventListener("click",function(event){
              event.preventDefault();
              const date = document.getElementById("datepicker").value;
              console.log("date:",date);
              const newUrl = `/admin/salesReport?date=${date}`;
            window.location.href = newUrl
            })
  </script>

  <script>
        const downloadBtn = document.getElementById("donBtn");
        downloadBtn.addEventListener("click",function(event){
            event.preventDefault();
            const ordersForDownload = <%- JSON.stringify(orders) %>;
            $.ajax({
                type: 'POST',
                url:'/admin/downloadSalesReport',
                data:{
                    orders:ordersForDownload
                },
                success:function(response){
                    if(response){
                        console.log("response reached frontend");
                    }
                },
                error:function(err){
                    console.error("error getting data in the frntend ",err);
                }
            })
        })
  </script>
