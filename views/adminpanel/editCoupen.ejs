  <script>
    function validate(event){
    event.preventDefault();
      const errorMessage = document.getElementById('error-message');
      const coupen = document.getElementById("coupen").value;
      const coupenOffer = document.getElementById("coupenOffer").value;
      const  datepicker  = document.getElementById("datepicker").value;
      const redeemAmount = document.getElementById("redeemAmount").value;
      const minCartAmount = document.getElementById("minCartAmount").value;
      const couponType = document.getElementById("couponType").value;

      const selectedCoupen = <%-JSON.stringify(selectedCoupen) %>;
      console.log("coupenOffer:",coupenOffer);
      console.log("coupen:",coupen);
      function checkWhiteSpace(s){
        return s.trim() === "";
      }

      if(coupen === ""  ){
        errorMessage.innerText ="please enter a Coupen Code !";
                errorMessage.style.display = "block";
                setTimeout(function () {
                    errorMessage.style.display = "none";
                }, 3000);
        return false;
      }

      if(couponType == "percentage" && coupenOffer > 100  ){
        errorMessage.innerText ="please enter the  valid Offer!";
        errorMessage.style.display = "block";
        setTimeout(function () {
            errorMessage.style.display = "none";
        }, 3000);
        return false;
      }

      if(coupenOffer === ""){
        errorMessage.innerText ="please enter the Offer!";
        errorMessage.style.display = "block";
        setTimeout(function () {
            errorMessage.style.display = "none";
        }, 3000);
        return false;
      }
   
      if(coupenOffer < 0 ){
        errorMessage.innerText ="please enter a valid offer!";
        errorMessage.style.display = "block";
        setTimeout(function () {
            errorMessage.style.display = "none";
        }, 3000);
        return false;
      }


      if(checkWhiteSpace(coupen)){
        errorMessage.innerText ="please enter a valid Coupen!";
        errorMessage.style.display = "block";
        setTimeout(function () {
          errorMessage.style.display = "none";
        }, 3000);
        return false;
        }
     
     
       console.log("coupen length:", coupen.length);
      if(coupen.length != 4 ){
        errorMessage.innerText ="Coupen code strength should be 4 !";
        errorMessage.style.display = "block";
        setTimeout(function () {
          errorMessage.style.display = "none";
        }, 3000);
        return false;
        }

        var regex = /^[a-z0-9]+$/i; // RegEx for alphanumeric characters
        if(!regex.test(coupen)){
           errorMessage.innerText ="Coupen code should only contain letters and numbers";
           errorMessage.style.display = "block";
           setTimeout(function () {
             errorMessage.style.display = "none";
           }, 3000);
           return false;
        }


        if(minCartAmount == "" || minCartAmount <= 0){
          errorMessage.innerText ="Enter a  valid minimum cart amount";
          errorMessage.style.display = "block";
          setTimeout(function () {
            errorMessage.style.display = "none";
          }, 3000);
          return false;
        }



        if(redeemAmount == "" || redeemAmount <= 0 ){
          errorMessage.innerText ="Enter valid max redeemable amount";
          errorMessage.style.display = "block";
          setTimeout(function () {
            errorMessage.style.display = "none";
          }, 3000);
          return false;
        }

        if(datepicker == ""){
          errorMessage.innerText ="Enter the expiray date";
          errorMessage.style.display = "block";
          setTimeout(function () {
            errorMessage.style.display = "none";
          }, 3000);
          return false;
        }


         console.log("hei side ajax");
        $.ajax({

            type: 'POST',
            url:'/admin/updateEditedCoupen',
            contentType: 'application/json', 
            data: JSON.stringify({
                coupen: coupen,
                coupenOffer: coupenOffer,
                selectedCoupen,
                couponType,minCartAmount,
                redeemAmount

            }),
            success:function(response){
              if (response) {
               console.log("frontttttttt");
               window.location = '/admin/coupen';
            }
            },
            error:function(err){
                console.error("error updating in the database ",err);
            }
        })
    }

