  <script>
    window.onload = function() {
      const products = <%- JSON.stringify(products) %>;
      const category = <%- JSON.stringify(category) %>;
      const users = <%- JSON.stringify(users) %>;
      var usersCount = document.getElementById('usersCount');
      var productsCount = document.getElementById('productsCount');
      var categoriesCount = document.getElementById('categoriesCount');
     
      // Replace these numbers with the actual counts
      var usersTotal = users.length;
      var productsTotal = products.length;
      var categoriesTotal = category.length;
     
      var usersCurrent = 0;
      var productsCurrent = 0;
      var categoriesCurrent = 0;
     
      var interval = setInterval(function() {
        if (usersCurrent < usersTotal) {
          usersCurrent++;
          usersCount.innerHTML = usersCurrent;
        } else if (productsCurrent < productsTotal) {
          productsCurrent++;
          productsCount.innerHTML = productsCurrent;
        } else if (categoriesCurrent < categoriesTotal) {
          categoriesCurrent++;
          categoriesCount.innerHTML = categoriesCurrent;
        } else {
          clearInterval(interval);
        }
      }, 100);
     };
