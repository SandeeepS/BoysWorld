    const products = <%- JSON.stringify(uniqueProducts) %>;
    const name = products.productName;
    const price = products.price;
    const stock = products.stock;


    google.charts.load('current', {'packages':['table']});
    google.charts.setOnLoadCallback(drawTable);

    function drawTable() {
      var data = new google.visualization.DataTable();
      data.addColumn('string', 'Name');
      data.addColumn('number', 'Quantity');
      data.addColumn('number', 'Stock Left');
      for (var i = 0; i < products.length; i++) {
        data.addRow([products[i].productName, products[i].price, products[i].stock]);
      }
     

      var table = new google.visualization.Table(document.getElementById('table_div'));
      table.draw(data, {showRowNumber: true, width: '100%', height: '100%'});
    }
  </script>
